<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="329.0" prefWidth="441.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CustomerUpdate">
    <children>
        <Label layoutX="14.0" layoutY="14.0" text="Edit Customer Information">
            <font>
                <Font size="19.0" />
            </font>
        </Label>
        <TextField fx:id="customerID" editable="false" layoutX="45.0" layoutY="73.0" promptText="Customer ID" />
        <TextField fx:id="customerName" layoutX="45.0" layoutY="116.0" promptText="Customer Name" />
        <TextField fx:id="address" layoutX="245.0" layoutY="73.0" promptText="Address" />
        <TextField fx:id="phone" layoutX="245.0" layoutY="164.0" promptText="Phone Number" />
        <TextField fx:id="postalCode" layoutX="245.0" layoutY="116.0" promptText="Postal Code" />
        <Button fx:id="updateCustomer" layoutX="93.0" layoutY="255.0" mnemonicParsing="false" onAction="#updateCustomer" text="Update Customer" />
        <Button fx:id="cancelButton" layoutX="268.0" layoutY="255.0" mnemonicParsing="false" onAction="#cancelButton" prefHeight="25.0" prefWidth="77.0" text="Cancel" />
      <ComboBox fx:id="countryCombo" layoutX="45.0" layoutY="164.0" onAction="#onCountryChange" prefWidth="150.0" promptText="Country" />
      <ComboBox fx:id="divisionCombo" layoutX="45.0" layoutY="211.0" prefWidth="150.0" promptText="Division" />
    </children>
</AnchorPane>
