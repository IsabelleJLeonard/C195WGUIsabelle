      </Label>
      <TextField fx:id="customerID" editable="false" layoutX="44.0" layoutY="85.0" promptText="Customer ID" />
      <TextField fx:id="customer_Name" layoutX="44.0" layoutY="135.0" promptText="Customer Name" />
      <TextField fx:id="Address" layoutX="245.0" layoutY="85.0" promptText="Address" />
      <TextField fx:id="phone" layoutX="245.0" layoutY="188.0" promptText="Phone Number" />
      <TextField fx:id="postal_Code" layoutX="245.0" layoutY="135.0" promptText="Postal Code" />
      <Button layoutX="98.0" layoutY="268.0" mnemonicParsing="false" onAction="#saveButton" text="Save" />
      <Button layoutX="266.0" layoutY="268.0" mnemonicParsing="false" onAction="#cancelButton" prefHeight="25.0" prefWidth="77.0" text="Cancel" />
      <ComboBox fx:id="countryCombo" layoutX="44.0" layoutY="188.0" onAction="#onCountryChange" prefWidth="150.0" promptText="Country" />
      <ComboBox fx:id="divisionCombo" layoutX="44.0" layoutY="231.0" prefWidth="150.0" promptText="Division" />
   </children>
