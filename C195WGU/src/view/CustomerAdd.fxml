<AnchorPane prefHeight="329.0" prefWidth="441.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CustomerAdd">
   <children>
      <Label layoutX="14.0" layoutY="14.0" text="Add Customer">
         <font>
            <Font size="19.0" />
